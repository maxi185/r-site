function move(btn) {
  btn.style.position = "fixed";
  btn.style.top = Math.random() * window.innerHeight * 0.6 + "px";
  btn.style.left = Math.random() * window.innerWidth * 0.6 + "px";
}

function showLove() {
  next('final');
  document.getElementById("loveText").innerHTML = "Tiri te9ray " + herName + " â¤ï¸";
